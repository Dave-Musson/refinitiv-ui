{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "access": "public",
      "message": "chore(release): publish [skip ci]",
      "registry": "https://registry.npmjs.org"
    }
  },
  "ignoreChanges": ["**/__test__/**", "**/__demo__/**", "**/__snapshots__/**"]
}
